%h1 Listing Countries

%ul.pagination
  -("A".."Z").each do |letter|
    %li{:class => ("current" if letter == @letter)}
      = link_to letter, :controller => "agent/countries", :action => :index, :letter => letter 

%table
  %thead
    %tr
      %th Name
      %th ISO2 Code
      %th Holidays
      %th
  %tbody
    - @countries.each do |country|
      %tr
        %td 
          = flag_for country
          = country.name
        %td= country.iso_2
        %td= country.holidays.size
        %td= add_favourite country, :class => [:tiny, :round, :secondary, :button]
        %td= link_to 'Show', holidays_agent_country_path(country.id), :class => [:tiny, :round, :secondary, :button]

