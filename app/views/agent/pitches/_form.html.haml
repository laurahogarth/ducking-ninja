= form_for [:agent, @holiday, @pitch] do |f|
  - if @pitch.errors.any?
    #error_explanation
      %h2= "#{pluralize(@pitch.errors.count, "error")} prohibited this pitch from being saved:"
      %ul
        - @pitch.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :min
    = f.number_field :min
  .field
    = f.label :max
    = f.number_field :max
  .field
    = f.label :expertise
    = f.number_field :expertise
  .field
    = f.label :content
    = f.text_area :content
  .actions
    = f.submit 'Save', :class => :button
    = link_to 'Back', agent_pitches_path, :class => :button
