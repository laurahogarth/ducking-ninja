!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    
    %title=content_for?(:title) ? yield(:title) : "foundation-rails" 
    =stylesheet_link_tag "application"
    =javascript_include_tag "vendor/modernizr"
    =csrf_meta_tags
  %body
    .row
      %h1 Ducking Ninja!

      =render "layouts/shared/flash_messages"

      -unless traveller_signed_in?
        =link_to("Log In", new_traveller_session_path, :class => :button)
      -else
        =link_to("Log Out", destroy_traveller_session_path, :method => :delete, :class => :button)
      =yield

    =javascript_include_tag "application"

