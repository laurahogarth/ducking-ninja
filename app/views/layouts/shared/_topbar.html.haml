%nav.top-bar{:data => {:topbar => true }}
  %ul.title-area
    %li.name
      %h1
        =link_to "Ducking Ninja", root_path 
    %li.toggle-topbar.menu-icon
      %a{:href => '#',} Menu

  %section.top-bar-section
    %ul.right
      -if traveller_signed_in?
        %li
          =link_to "Holidays", holidays_path
      -if agent_signed_in?
        %li
          =link_to "Dashboard", dashboard_agent_path(current_agent.id)
      %li
        =link_to "About", about_path
      %li
        =link_to "FAQ", faq_path
      %li.has-form
        =render 'layouts/shared/login_controls'
